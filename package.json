{
  "name": "mercurywallet",
  "jest": {
    "resetMocks": false,
    "moduleDirectories": [
      "node_modules",
      "src",
      "client-wasm/pkg"
    ],
    "modulePaths": [
      "src",
      "node_modules",
      "client-wasm/pkg"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "d.ts",
      "wasm"
    ],
    "modulePathIgnorePatterns": [
      "src/e2e"
    ]
  },
  "repository": "github:layer2tech/mercury-wallet",
  "version": "v0.7.5",
  "license": "MIT/Apache-2.0",
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "e2e": "testcafe \"electron:.\" \"./src/e2e/**/*.js\"",
    "install-local": "yarn add file:./tor-adapter",
    "start": "react-app-rewired start",
    "prebuild": "DATE=`date` && YEAR=${DATE##* } && MERC_YEAR=`jq .build.copyright package.json | awk '{print $3}'` && if [ $YEAR -ne $MERC_YEAR ]; then echo 'package.json prebuild - expected .build.copyright year' $YEAR ', got' $MERC_YEAR '- please update year' && return 1; fi",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom ./src/wallet/test",
    "test-node": "react-app-rewired test --env=node",
    "eject": "react-scripts eject",
    "electron": "electron --inspect=5858 --testnet --term_existing .",
    "dev": "NODE_ENV=development BROWSER=none nf start -p 3000",
    "dev-windows": "cross-env BROWSER=none nf start -p 3000",
    "postinstall": "electron-builder install-app-deps",
    "build-wasm": "wasm-pack build --dev client-wasm",
    "app-windows": "yarn install-local && yarn install && yarn build && electron-builder -w -p always",
    "app-windows-local-test": "yarn install-local && yarn install && yarn build && DEBUG=electron-builder electron-builder -w -p never",
    "app-linux": "yarn install-local && yarn install && yarn build && electron-builder -l AppImage -p always",
    "app-linux-local-test": "yarn install-local && yarn install && yarn build && DEBUG=electron-builder electron-builder -l AppImage -p never",
    "app-macos": "yarn install-local && yarn install && yarn build && electron-builder -m -p always",
    "app-macos-local-test": "yarn install-local && yarn install && yarn build && DEBUG=electron-builder electron-builder -m -p never",
    "app-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "devDependencies": {
    "@types/uuid": "^8.3.0",
    "concurrently": "^5.3.0",
    "electron": "^17.1.2",
    "electron-build-env": "^0.2.0",
    "electron-builder": "^22.9.1",
    "electron-builder-notarize": "^1.2.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-notarize": "^1.0.0",
    "foreman": "^3.0.1",
    "mock-req-res": "^1.2.0",
    "sinon": "^13.0.1",
    "wait-on": "^5.2.0",
    "wasm-loader": "^1.3.0"
  },
  "dependencies": {
    "wtfnode": "^0.9.1",
    "why-is-node-running": "^2.2.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.17",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-app-rewired": "^2.2.1",
    "react-scripts": "^5.0.1",
    "typescript": "^4.5.4",
    "web-vitals": "^2.1.2",
    "@aguycalled/electrum-client-js": "^0.1.9",
    "@electron/remote": "^2.0.7",
    "@esfx/async-semaphore": "^1.0.0-pre.19",
    "@reduxjs/toolkit": "^1.4.0",
    "@types/app-root-dir": "^0.1.0",
    "alert": "^5.0.10",
    "app-root-dir": "^1.0.2",
    "async-mutex": "^0.3.1",
    "async-semaphore": "^2.0.0",
    "axios": "^0.21.1",
    "bech32": "^1.1.4",
    "bigint-mod-arith": "^2.0.8",
    "bip32": "^2.0.6",
    "bip32-utils": "^0.11.1",
    "bip39": "^3.0.3",
    "bitcoinjs-lib": "^5.2.0",
    "bn": "^1.0.5",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.3",
    "bottleneck": "^2.19.5",
    "buffer-json": "^2.0.0",
    "client-wasm": "file:client-wasm/pkg",
    "cross-env": "^7.0.3",
    "eciesjs12b": "^0.3.11",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-log": "^4.3.1",
    "electron-root-path": "^1.0.16",
    "electron-store": "^7.0.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fix-path": "^3.0.0",
    "geoip-country": "^4.0.98",
    "html-react-parser": "^0.14.2",
    "i18n-iso-countries": "^7.1.0",
    "install": "^0.13.0",
    "lodash.clonedeep": "^4.5.0",
    "mercury-wallet-tor-adapter": "file:./tor-adapter",
    "moment": "^2.29.1",
    "msgpack-lite": "^0.1.26",
    "mutex-promise": "^0.1.0",
    "net": "^1.0.2",
    "qrcode.react": "^1.0.1",
    "react-bootstrap": "^1.4.0",
    "react-copy-to-clipboard": "^5.0.3",
    "react-hook-form": "^6.15.1",
    "react-loading": "^2.0.3",
    "react-moment": "^1.0.0",
    "react-quantity-picker": "^1.0.3",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-table": "^7.6.2",
    "react-use-clipboard": "1.0.7",
    "request-debug": "^0.2.0",
    "request-promise": "^4.2.6",
    "reselect": "^4.1.5",
    "semver": "^7.3.5",
    "socks": "^2.6.1",
    "socks-proxy-agent": "^5.0.0",
    "superagent": "^6.1.0",
    "suppress-warnings": "^1.0.2",
    "testcafe": "^1.14.2",
    "testcafe-browser-provider-electron": "^0.0.16",
    "typeforce": "^1.11.3",
    "uuid": "^8.3.2",
    "wasm-pack": "^0.10.0",
    "crypto": "npm:crypto-browserify",
    "crypto-browserify": "^3.12.0",
    "https-browserify": "^1.0.0",
    "constants-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "stream": "npm:stream-browserify",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.0",
    "assert": "^2.0.0",
    "buffer": "^6.0.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": {
    "name": "Mercury Wallet",
    "email": "main@mercurywallet.com",
    "url": "https://mercurywallet.com"
  },
  "build": {
    "asar": false,
    "appId": "com.mercurywallet.wallet",
    "productName": "mercurywallet",
    "copyright": "Copyright Â© 2022 ${author}",
    "afterSign": "./afterSignHook.js",
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "./node_modules/electron-builder-notarize/entitlements.mac.inherit.plist",
      "icon": "./public/icons/mercury-symbol-tri-color.icns"
    },
    "linux": {
      "icon": "./public/icons/mercury-symbol-tri-color.icns"
    },
    "win": {
      "icon": "./public/icons/mercury-symbol-tri-color.png"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "layer2tech",
        "repo": "mercury-wallet"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraFiles": [
      {
        "from": "resources/${os}",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/etc",
        "to": "Resources/etc",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/LICENCES",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^5.15.0",
    "**/@typescript-eslint/parser": "^5.15.0"
  }
}
